---
const { title, url, description } = Astro.props;
---

<div>
  <a href={url}>
    <h3 class='txt-link'>{title}</h3>
  </a>
  <p>
    {description}
  </p>
</div>

<style>
  a {
    margin-top: 1rem;
    text-decoration: none;
  }

  div {
    margin-top: 1rem;
  }

  h3 {
    color: var(--txt-clr);
    font-size: 1rem;
  }

  p {
    margin-top: 0.5rem;
    opacity: 60%;
  }
</style>
