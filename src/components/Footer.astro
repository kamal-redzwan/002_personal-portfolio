---
import Social from './Social.astro';
import socialData from '../data/socials.json';
---

<footer>
  <div>
    <p>Email: hey at this domain</p>
  </div>
  <div class='socials'>
    {
      socialData.map((data) => {
        return <Social platform={data.platform} username={data.userName} />;
      })
    }
  </div>
</footer>

<style>
  footer {
    display: flex;
    justify-content: space-between;
    align-items: center;

    position: absolute;
    bottom: 0;
    left: 0;
    padding: 0 1rem;

    width: 100%;
    height: 60px;
  }

  p {
    color: var(--txt-clr-dim);
  }
</style>
