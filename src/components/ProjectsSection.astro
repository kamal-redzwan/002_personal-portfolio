---
import ProjectCard from '../components/ProjectCard.astro';
---

<section>
  <h2>Projects</h2>
  <div>
    <ProjectCard
      projectNumber='#001'
      projectName='AboutMe'
      description='Lorem ipsum dolor sit amet consectetur adipisicing elit.'
    />
    <ProjectCard
      projectNumber='#002'
