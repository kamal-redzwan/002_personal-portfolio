<style>
  h2 {
    font-size: 1rem;
    padding-top: 3rem;
    padding-bottom: 1rem;
  }

  div {
    display: grid;
    grid-template-columns: 1fr
    column-gap: 2.5rem;
    row-gap: 1.25rem;
  }

  @media (min-width: 768px) {
    div {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    div {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
